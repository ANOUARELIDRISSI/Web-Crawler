# MongoDB Configuration
# Copy this file to .env and update the values

# MongoDB Host and Port
MONGODB_HOST=localhost
MONGODB_PORT=27017

# MongoDB Database Name
MONGODB_DATABASE=web_crawler

# MongoDB Authentication (optional)
MONGODB_USERNAME=crawler_admin
MONGODB_PASSWORD=your_secure_password_here

# MongoDB Connection Strings
# With authentication:
MONGODB_URI=mongodb://crawler_admin:your_secure_password_here@localhost:27017/web_crawler?authSource=admin

# Without authentication (for local development):
MONGODB_URI_NO_AUTH=mongodb://localhost:27017/

# Application Settings
APP_ENV=development
DEBUG=True
